<!DOCTYPE html>
<html>
<head>
    <title>Library Services Health Monitor</title>
    <link rel="stylesheet" href="<%= basePath %>/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Library Services Health Monitor</h1>
       

            <strong>Last Database Update:</strong> <span id="lastUpdate"><%= new Date(summary.checkTime).toLocaleString() %></span><a class="check-btn" onclick="performManualCheck()" id="manualCheckBtn">ðŸ”„</a>
            <span id="checkStatus"></span>
        </div>

        <div class="sources-container">
        <% summary.sources.forEach(source => { %>
            <div class="source <%= source.status === 'OK' ? 'ok' : 'error' %>">
                <% const externalSource = externalSources.find(s => s.name === source.name); %>
                <a href="<%= externalSource?.url || '#' %>" target="_blank" class="external-link" title="View <%= source.name %> source">â†—ï¸Ž</a>
                <strong><%= source.name %></strong>
                <span class="status <%= source.status === 'OK' ? 'ok' : 'error' %>">(<%= source.status %>)</span>
                <% if (source.errorMessage) { %>
                    <div class="error">Error: <%= source.errorMessage %></div>
                <% } %>
                <% if (source.htmlData) { %>
                    <div class="html-details">                        
                        <% if (source.htmlData.components.length > 0) { %>
                            <details>
                                <summary><%= source.htmlData.healthyCount %> services operational, <%= source.htmlData.errorCount %> with issues</summary>
                                <ul style="margin: 5px 0;">
                                    <% source.htmlData.components.forEach(comp => { %>
                                        <li><strong><%= comp.name %>:</strong> <%= comp.status %> <%= comp.isError ? 'âŒ' : 'âœ…' %>
                                        <% if (comp.details && comp.details.url) { %>
                                            <br><a href="<%= comp.details.url %>" target="_blank" class="source-link">â§‰ View Post</a>
                                        <% } %></li>
                                    <% }) %>
                                </ul>
                            </details>
                        <% } %>
                    </div>
                <% } %>
                <% if (source.xmlData) { %>
                    <div class="xml-details">
                        <strong>Services:</strong> <%= source.xmlData.totalComponents %> total, 
                        <%= source.xmlData.healthyCount %> operational, <%= source.xmlData.errorCount %> with issues
                        <% if (source.xmlData.components.length > 0) { %>
                            <details style="margin-top: 10px;">
                                <summary>View Services</summary>
                                <ul style="margin: 5px 0;">
                                    <% source.xmlData.components.forEach(comp => { %>
                                        <li><strong><%= comp.name %>:</strong> <%= comp.status %> <%= comp.isError ? 'âŒ' : 'âœ…' %>
                                        <% if (comp.errorMessages.length > 0) { %>
                                            <br><span style="color:#666; font-size:0.9em;">Issues: <%= comp.errorMessages.join(', ') %></span>
                                        <% } %></li>
                                    <% }) %>
                                </ul>
                            </details>
                        <% } %>
                    </div>
                <% } %>
                <% if (source.rssData) { %>
                    <div class="rss-details">
                        <% if (source.rssData.components.length > 0) { %>
                            <details>
                                <summary><%= source.rssData.healthyCount %> services operational, <%= source.rssData.errorCount %> with issues</summary>
                                <ul style="margin: 5px 0;">
                                    <% source.rssData.components.forEach(comp => { %>
                                        <li><strong><%= comp.name %>:</strong> <%= comp.status %> <%= comp.isError ? 'âŒ' : 'âœ…' %>
                                        <% if (comp.details && comp.details.description) { %>
                                            <br><span style="color:#666; font-size:0.9em;"><%= comp.details.description %></span>
                                        <% } %>
                                        <% if (comp.details && comp.details.pubDate) { %>
                                            <br><span style="color:#888; font-size:0.8em;">Published: <%= comp.details.pubDate %></span>
                                        <% } %></li>
                                    <% }) %>
                                </ul>
                            </details>
                        <% } %>
                    </div>
                <% } %>
                <% if (source.jsonData) { %>
                    <div class="json-details">
                        <% if (source.jsonData.components.length > 0) { %>
                            <details>
                                <summary><%= source.jsonData.totalComponents - source.jsonData.errorCount %> services operational, <%= source.jsonData.errorCount %> with issues</summary>
                                <ul style="margin: 5px 0;">
                                    <% source.jsonData.components.forEach(comp => { %>
                                        <li><strong><%= comp.name %>:</strong> <%= comp.status %> <%= comp.isError ? 'âŒ' : 'âœ…' %>
                                        <% if (comp.statusText) { %>
                                            <br><span style="color:#666; font-size:0.9em;">Status: <%= comp.statusText %></span>
                                        <% } %></li>
                                    <% }) %>
                                </ul>
                            </details>
                        <% } %>
                    </div>
                <% } %>
                                <% if (source.lastUpdated) { %>
                    <div class="response-time">Last Updated: <%= new Date(source.lastUpdated).toLocaleString() %></div>
                <% } %>
            </div>
        <% }) %>
        </div>
                    
        <div style="margin-top: 20px; padding: 10px; background: #f9f9f9; border-radius: 4px;">
            <strong>API Endpoints:</strong><br>
            <a href="<%= basePath %>/health"><%= basePath %>/health</a>
        </div>
    </div>
    <script>
        // Make base path available to client-side JavaScript
        window.basePath = '<%= basePath %>';
    </script>
    <script src="<%= basePath %>/js/main.js"></script>
    
</body>
</html>